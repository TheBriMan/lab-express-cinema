<main class="movie-details-view">
    <div class="movie-details-left">
        <img src="{{movie.image}}" />
    </div>
    <div class="movie-details-right">
        <a href="/movies">Go back</a>
        <h1>{{movie.title}}</h1>
        <h2>Director: {{movie.director}}</h2>
        <p>Stars</p>
        <ul>
            {{#each movie.stars}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>Description: {{movie.description}}</p>
        <ul>
            {{#each movie.showtimes}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
</main>